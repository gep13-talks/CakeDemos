{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Cake: Debug Script (Mono)",
          "type": "mono",
          "request": "launch",
          "program": "${workspaceRoot}/tools/Cake/Cake.exe",
          "args": [
            "${workspaceRoot}/build.cake",
            "--debug",
            "--verbosity=diagnostic"
          ],
          "cwd": "${workspaceRoot}",
          "console": "internalConsole"
        }
    ]
}
